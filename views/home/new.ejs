<% layout('../layouts/default.ejs') -%>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h3>Add New Project</h3>
        </div>

        <div class="col-md-8">
        <form role="form" action="/vagrant/update" method="post">
            <fieldset>
                <div class="form-group">
                    <label for="vagrant-config-vm-box">Project Name</label>
                    <input type="text" class="form-control" id="vagrant-config-vm-box" value="" name="config_vm_box">
                </div>
                <div class="form-group">
                    <label for="vagrant-config-vm-box">VM Box</label>
                    <input type="text" class="form-control" id="vagrant-config-vm-box" value="" name="config_vm_box">
                </div>
                <div class="form-group">
                    <label for="vagrant-config-vm-box-url">VM Box Url</label>
                    <input type="text" class="form-control" id="vagrant-config-vm-box-url" value="" name="config_vm_box_url">
                </div>

                <div class="form-group">
                    <label for="vagrant-network-type">Network Type</label>
                    <select class="form-control" name="network_type">
                        <option value="public_network" selected>Public</option>
                        <option value="private_network">Private</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="vagrant-network-ip">Network IP</label>
                    <input type="text" class="form-control" id="vagrant-network-ip" value="" name="network_ip">
                </div>
                <div class="form-group">
                    <label for="vagrant-network-hostname">Network Hostname</label>
                    <input type="text" class="form-control" id="vagrant-network-hostname" value="" name="network_hostname">
                </div>

                <div class="form-group">
                    <label for="vagrant-provider-type">VM Provider Type</label>
                    <select class="form-control" name="provider_type">
                        <option value="virtualbox" selected>VirtualBox</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="vagrant-provider-name">VM Provider Name</label>
                    <input type="text" class="form-control" id="vagrant-provider-name" value="" name="provider_name">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </fieldset>
        </form>
        </div>
    </div>
</div>